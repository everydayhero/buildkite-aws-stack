#!/bin/bash -ie

if [ -z "$PLANFILE" ]; then
  echo "PLANFILE is not set or empty"
  exit 1
fi

if [ -z "$STATE_BUCKET" ]; then
  echo "STATE_BUCKET is not set or empty"
  exit 1
fi

if [ -z "$STATE_KEY" ]; then
  echo "STATE_KEY is not set or empty"
  exit 1
fi

cd ./terraform
/usr/bin/terraform remote config -backend=s3 -backend-config="bucket=$STATE_BUCKET" -backend-config="key=$STATE_KEY"

if hash buildkite-agent 2> /dev/null; then
  buildkite-agent artifact download ami-id .
  export TF_VAR_image_id=$(cat ami-id)
fi

echo "~~~ Planning :terraform:"
/usr/bin/terraform plan -input=false -out "$PLANFILE"

if hash buildkite-agent 2> /dev/null; then
  echo "~~~ Uploading :terraform:"
  buildkite-agent artifact upload "$PLANFILE" "$BUILDKITE_ARTIFACT_UPLOAD_DESTINATION"
fi
